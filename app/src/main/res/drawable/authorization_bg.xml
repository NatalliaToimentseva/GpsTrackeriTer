<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:layout_height="wrap_content">
            <solid android:color="@color/background" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerX="0.5"
                android:centerY="0.7"
                android:endColor="@android:color/transparent"
                android:gradientRadius="100%"
                android:startColor="@color/mintL"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerX="0.8"
                android:centerY="0.5"
                android:endColor="@color/mintL"
                android:gradientRadius="70%"
                android:startColor="@color/yellow"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerX="0.3"
                android:centerY="0.2"
                android:endColor="@android:color/transparent"
                android:gradientRadius="80%"
                android:startColor="@color/mintL"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/mintD"
                android:gradientRadius="100%"
                android:startColor="@android:color/transparent"
                android:type="radial" />
        </shape>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FieldTexStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dm_5</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="TitleTextStyle" parent="MainTextStyle">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_50</item>
        <item name="android:layout_marginVertical">@dimen/dm_5</item>
        <item name="android:textColorHint">@color/items_hint_color</item>
        <item name="hintTextColor">@color/items_hint_color</item>
        <item name="cursorColor">@color/middle_white</item>
    </style>

    <style name="LogoTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaushan_script_regular</item>
        <item name="android:textColor">@color/middle_white</item>
        <item name="android:textSize">@dimen/sp_70</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthorizationMaterialButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_50</item>
        <item name="android:layout_marginTop">@dimen/dm_25</item>
        <item name="android:enabled">false</item>
        <item name="android:backgroundTint">@color/button_color_bg</item>
        <item name="android:padding">@dimen/dm_15</item>
        <item name="android:textColor">@color/button_text_colors</item>
    </style>

</resources>